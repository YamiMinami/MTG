<%- include("partials/header") %>

    <body>
        <%- include("partials/aside") %>
            </aside>
            <main id="deck-container">
                <section id="deck-bar">
                    <input id="deck-search" type="search" placeholder="search..." />
                    <section id="deck-manabar">
                        <button id="White" class="deck-type"><img
                                src="/assets/A_fantasy-style_white_mana_symbol_from_Magic__The__transparent.png"
                                alt=""></button>
                        <button id="Blue" class="deck-type"><img
                                src="/assets/A_fantasy-style_blue_mana_symbol_from_Magic__The_G_transparent.png"
                                alt=""></button>
                        <button id="Black" class="deck-type"><img
                                src="/assets/A_fantasy-style_black_mana_symbol_from_Magic__The__transparent.png"
                                alt=""></button>
                        <button id="Red" class="deck-type"><img
                                src="/assets/A_fantasy-style_red_mana_symbol_from_Magic__The_Ga_transparent.png"
                                alt=""></button>
                        <button id="Green" class="deck-type"><img
                                src="/assets/A_fantasy-style_green_mana_symbol_from_Magic__The__transparent.png"
                                alt=""></button>
                        <button id="None" class="deck-type"><img
                                src="/assets/A_fantasy-style_colorless_mana_symbol_from_Magic___transparent (1).png"
                                alt=""></button>
                    </section>
                    <button id="add-deck-button" class="deck-buttons">
                        <strong>deck toevoegen</strong>
                    </button>
                </section>

                <section id="deck-collection">
                    <% decks.forEach(deck=> { %>
                        <article class="deck-card">
                            <img src="/assets/<%= deck.colors.includes('W') ? 'innistrad' : 'dominaria' %>.jpg"
                                alt="<%= deck.name %>">
                            <h2>
                                <%= deck.name %>
                            </h2>
                            <div class="deck-actions">
                                <button class="edit-deck" data-deck-id="<%= deck._id %>">Bewerken</button>
                                <button class="delete-deck" data-deck-id="<%= deck._id %>">Verwijderen</button>
                            </div>
                        </article>
                        <% }); %>
                </section>

                <section class="pages">
                    <article>Terug</article>
                    <article>Pagina 2</article>
                    <article>Volgende</article>
                </section>



                <section class="add-to-deckcollection">
                    <button id="close-button"><i class="fa-solid fa-xmark"></i></button>
                    <!-- <button id="delete-deck-button" class="deck-buttons">
          <i class="fa-solid fa-trash"></i> -->
                    </button>
                    <article id="deck-image">
                        <div id="deck1" class="deck"></div>
                    </article>
                    <form id="add-info-deck" action="/decks" method="POST">
                        <h1><strong>add deck</strong></h1>
                        <label for="name-deck">
                            <strong>deck name</strong>
                            <input type="text" id="name-deck" name="name" required>
                        </label>

                        <div class="color-selection">
                            <% ['White', 'Blue' , 'Black' , 'Red' , 'Green' , 'None' ].forEach(color=> { %>
                                <label>
                                    <input type="checkbox" name="colors" value="<%= color[0] %>">
                                    <img src="/assets/<%= color %>-mana.png" alt="<%= color %>">
                                </label>
                                <% }); %>
                        </div>
                        <button type="submit">Opslaan</button>
                    </form>
                </section>
            </main>
    </body>

    </html>